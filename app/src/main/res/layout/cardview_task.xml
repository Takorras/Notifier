<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:contentPaddingLeft="8dp"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkbox_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_card_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/checkbox_done"
            android:text="Taskをやる"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/text_card_milestone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_card_task_name"
            android:layout_toRightOf="@id/checkbox_done"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="あと4日"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
